<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.goinoutgames.www.goinoutgames.AddEvent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        android:weightSum="1">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEW EVENT"
            android:textColor="@color/colorPrimary"
            android:paddingStart="-63sp"
            android:gravity="center"
            android:textSize="20dp"

            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="20sp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="15sp"
            android:layout_margin="10sp"
            android:id="@+id/event_name"
            android:textColor="@color/white"
            android:hint="Event name"
            android:textSize="18sp"
            android:inputType="text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10sp"
            android:layout_margin="10sp"
            android:textSize="18sp"
            android:id="@+id/event_place"
            android:hint="Event place"
            android:textColor="@color/white"
            android:drawableRight="@drawable/gps_fixed"
            android:gravity="center"
            android:drawablePadding="-32sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="15sp"
            android:layout_margin="10sp"
            android:id="@+id/event_start_date"
            android:hint="Please select start date"
            android:textColor="@color/white"
            android:drawableRight="@drawable/cal"
            android:drawablePadding="-24sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="15sp"
            android:layout_margin="10sp"
            android:textSize="18sp"
            android:id="@+id/event_end_date"
            android:hint="Please select end date"
            android:textColor="@color/white"
            android:drawableRight="@drawable/cal"
            android:drawablePadding="-24sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="15sp"
            android:layout_margin="10sp"
            android:id="@+id/add_button"
            android:text="SAVE EVENT"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/logo"
            android:layout_gravity="right"
            android:layout_weight="1.5"
            />
    </LinearLayout>




</LinearLayout>
