<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goinoutgames.www.goinoutgames.MainActivity"
    android:background="#F2F0EB"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="inherit"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:textSize="17dp"
        android:paddingLeft="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textColor="#999"
        android:textStyle="bold"
        android:text="List of nearby events :"
        android:gravity="center"

        />

    <ExpandableListView
        android:id="@+id/listViewEvents"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_weight="1.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
         >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"

            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="inherit"
            android:gravity="center"
            android:text="Unreal party meetup games for your virtually real world reality"
            android:textColor="#f57e41"
            android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>
